<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CatalogOnline</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CatalogOnline.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="IntroductionPage">CatalogOnline</a>


                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            @{
                                var currentController_nav = ViewContext.RouteData.Values["controller"].ToString();
                                var currentAction_nav = ViewContext.RouteData.Values["action"].ToString();
                                <script>
                                    console.log("Current Controller: @currentController_nav");
                                    console.log("Current Action: @currentAction_nav");
                                </script>

                                if (currentController_nav == "Student" && currentAction_nav == "StudentHome")
                                {
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Student" asp-action="StudentHome">Student Home</a>
                                }
                                else if (currentController_nav == "Professor" && currentAction_nav == "ProfessorHome")
                                {
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Professor" asp-action="ProfessorHome">Professor Home</a>
                                }
                                else if (currentController_nav == "Admin" && currentAction_nav == "AdminHome")
                                {
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="AdminHome">Admin Home</a>
                                }
                                else if (currentController_nav == "Secretary" && currentAction_nav == "SecretaryHome")
                                {
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Secretary" asp-action="SecretaryHome">Secretary Home</a>
                                }
                            }
                           
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        @{
                             var currentController = ViewContext.RouteData.Values["controller"].ToString();
                             var currentAction = ViewContext.RouteData.Values["action"].ToString();

                            if (!(currentController == "Authentication" && currentAction == "Login")){
                                <li class="nav-item">
                                    <form asp-controller="Authentication" asp-action="Logout" method="post" id="logoutForm" style="display:inline;">
                                        <button type="submit" class="btn btn-link nav-link text-dark">Logout</button>
                                        @Html.AntiForgeryToken()
                                    </form>
                                </li>
                            }
                          }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - CatalogOnline - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<style>
body {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa;
}

button:hover {
    background-color: #45a049;
}

footer {
        background-color: #343a40;
        text-align:center;
}
</style>
